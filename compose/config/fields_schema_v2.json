{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "properties": {
    "version": {
      "enum": [2]
    },
    "services": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "fields_schema.json#/definitions/service"
        }
      }
    },
    "volumes": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/volume"
        }
      }
    }
  },

  "definitions": {
    "volume": {
      "type": "object",
      "properties": {
        "driver": {"type": "string"},
        "driver_opts": {
          "type": "object",
          "patternProperties": {
            "^.+$": {"type": ["boolean", "string", "number"]}
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
